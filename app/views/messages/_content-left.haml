.content-left
  .header-left
    .header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          = fa_icon 'edit', class: 'icon'
        / %i.fas.fa-edit
      / %li.list.fas.fa-cog
      %li.list
        = link_to edit_user_registration_path do
          = fa_icon 'cog', class: 'icon'


  .groups
    - @groups.each do |group|
      = link_to group_messages_path(group) do
        %p.groups__name
          =group.name
        %p.groups__messages
          =group.show_last_message
